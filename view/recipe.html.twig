{% extends "template.html.twig" %}

{% block headerblock %}{% include 'header.html.twig' with {'categories' : cats } %}{% endblock %}

{% block title %}{{ recipe.title }}{% endblock %}

{% block content %}
    {% if recipe.thumbnail is defined and recipe.thumbnail is not empty %}
    	<img src="{{ asset('/media/images/' ~ recipe.thumbnail) }}" alt="{{ recipe.thumbnail }}">
	{% endif %}
    <h1>{{ recipe.title }}</h1>

    <p>{{ recipe.content }}</p>

{% endblock %}