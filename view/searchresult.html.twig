{% extends "template.html.twig" %}

{% block title %}Your Search Results
{% endblock %}

{% block headerblock %}{% include 'header.html.twig' with {'categories' : cats } %}{% endblock %}


{% block content %}
		<form action="{{ path('search') }}" method="GET" id="search-form">
			<input type="text" name="search" placeholder="Search Recipes . . ." id="input-search">
			<button type="submit">X</button>
		</form>
<section>
<h2>Search Results</h2>

<div id="response"></div>
			<ul>
				{% for recipe in recipes %}
					<div id="recipe-card">
						<li>
							<a href="{{ path('baseRecipe') }}{{ recipe.id }}">{{ recipe.title }}</a>
						</li>
						<li>
							<p>{{ recipe.duration }}</p>
						</li>
					</div>
				{% endfor %}
			</ul>

		{% if message %}<p>{{ message }}</p>{% endif %}	

		</section>
{% endblock %}